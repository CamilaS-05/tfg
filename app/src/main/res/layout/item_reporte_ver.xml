<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/edittext_background">

        <TextView
            android:id="@+id/textViewAsunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto del reporte"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textViewDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del reporte que puede ocupar hasta dos líneas y termina con puntos suspensivos si es muy largo."
            android:textSize="15sp"
            android:textColor="@color/girsVerdoso"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textViewEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textSize="15sp"
            android:textColor="@color/girsVerdoso"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 2025-05-28"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
