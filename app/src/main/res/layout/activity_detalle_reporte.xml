<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeClaro"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="24dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Reporte"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Asunto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asunto"
            android:textColor="#555"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtTituloReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="#555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtDescripcionReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp" />

        <!-- Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de creación"
            android:textColor="#555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txtFechaReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp" />

        <!-- Usuario creador -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario creador"
            android:textColor="#555"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtUsuarioReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="8dp"
            android:background="@drawable/edittext_background"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
