<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeClaro"
    android:padding="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:padding="24dp"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:backgroundTint="@color/blancoVerde"
        android:layout_gravity="center_vertical">


    <!-- Imagen centrada horizontalmente -->
        <ImageView
            android:id="@+id/imageViewAdmin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/persona"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:text="PERFIL DEL USUARIO"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Resto de campos y botones igual... -->
        <!-- Nombre -->
        <TextView android:text="Nombre completo"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_nombre_usuario"
            android:enabled="false"
            android:background="@color/verdeClaro"
            android:padding="12dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Teléfono -->
        <TextView android:text="Teléfono"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_telefono_usuario"
            android:enabled="false"
            android:background="@color/verdeClaro"
            android:padding="12dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Correo -->
        <TextView android:text="Correo"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_correo_usuario"
            android:enabled="false"
            android:background="@color/verdeClaro"
            android:padding="12dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</ScrollView>