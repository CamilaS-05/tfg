<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:padding="16dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_margin="8dp"
            android:clipToPadding="false">

            <!-- Imagen centrada horizontalmente -->
            <ImageView
                android:id="@+id/imageViewAdmin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/persona"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="EDITAR PERFIL"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Nombre Completo -->
            <TextView
                android:text="Nombre completo"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etNombreCompleto"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Teléfono -->
            <TextView
                android:text="Teléfono"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etTelefono"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Correo -->
            <TextView
                android:text="Correo electrónico"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etCorreo"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Usuario (no editable) -->
            <TextView
                android:text="Usuario"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etUsuario"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Nueva contraseña -->
            <TextView
                android:text="Nueva contraseña"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etContrasena"
                android:hint="Escribe nueva contraseña (opcional)"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Confirmar contraseña -->
            <TextView
                android:text="Confirmar contraseña"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etConfirmarContrasena"
                android:hint="Repite la nueva contraseña"
                android:background="@color/verdeClaro"
                android:padding="12dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Botón Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:text="Guardar cambios"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>
</ScrollView>
