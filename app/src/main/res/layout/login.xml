<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        android:background="@drawable/fondo"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textviewarriba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INICIO DE SESIÓN"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textColorLink="@color/black"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>
            <EditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/persona"
                android:hint="Usuario"
                android:drawablePadding="10dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="text"
                android:textColor="?attr/colorOnSurface"
                tools:ignore="InvalidId" />
            <EditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/marco"
                android:drawableLeft="@drawable/candado"
                android:hint="Contraseña"
                android:drawablePadding="10dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botoniniciarsesion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/amarillento"
                android:text="INICIAR SESIÓN"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"/>


            <TextView
                android:id="@+id/notienecuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Aún no tienes una cuenta?"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textviewRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrarte Ahora"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textColorLink="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:id="@+id/textviewAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acceder como administrador"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurface"
                android:textColorLink="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>